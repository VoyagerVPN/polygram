{
  "name": "@polygram/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "build": "tsc",
    "postbuild": "node -e \"require('fs').writeFileSync('dist/apps/server/src/generated/prisma/package.json', '{ \\\"type\\\": \\\"commonjs\\\" }')\"",
    "start": "node dist/apps/server/src/index.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ignore-pattern src/infrastructure/prisma",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.0.0",
    "@polygram/shared": "workspace:*",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@ton/core": "^0.63.0",
    "@ton/crypto": "^3.3.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "openai": "^4.82.0",
    "pg": "^8.18.0",
    "prisma": "^7.3.0",
    "telegraf": "^4.16.3",
    "tweetnacl": "^1.0.3",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "4.0.18"
  }
}
