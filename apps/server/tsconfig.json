{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@polygram/shared": ["../../packages/shared/src/index.ts"],
      "@prisma/client": ["./src/generated/prisma/index"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*", "src/generated/**/*", "../../packages/shared/src/**/*"]
}
