{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@polygram/shared": ["../../packages/shared/src/index.ts"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*", "../../packages/shared/src/**/*"]
}
