# =============================================================================
# Polygram Deployment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Telegram Bot
# Get from @BotFather: https://t.me/BotFather
# -----------------------------------------------------------------------------
BOT_TOKEN=your_bot_token_here

# Telegram Chat ID for admin notifications (get from @userinfobot)
ADMIN_CHAT_ID=your_telegram_chat_id

# -----------------------------------------------------------------------------
# REQUIRED: AI Services
# Get from OpenRouter: https://openrouter.ai/keys
# -----------------------------------------------------------------------------
OPENROUTER_API_KEY=your_openrouter_api_key

# -----------------------------------------------------------------------------
# OPTIONAL: News Feed (for AI market generation)
# Get from CryptoPanic: https://cryptopanic.com/developers/api/
# -----------------------------------------------------------------------------
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key

# -----------------------------------------------------------------------------
# Database Configuration (used by Docker Compose)
# -----------------------------------------------------------------------------
DB_USER=polygram_user
DB_PASSWORD=generate_strong_random_password_here
DB_NAME=polygram

# Full DATABASE_URL (constructed from above or use custom)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}?schema=public

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# TON Blockchain (set USE_MOCK_TON=true for testing without real TON)
# -----------------------------------------------------------------------------
USE_MOCK_TON=true

# Real TON configuration (used when USE_MOCK_TON=false)
TONAPI_KEY=your_tonapi_key_here
APP_WALLET=your_ton_wallet_address_here

# -----------------------------------------------------------------------------
# Client Build Configuration (used during docker-compose build)
# For production with Docker Compose, use relative paths (Nginx proxies requests)
# For external hosting, use full URLs
# -----------------------------------------------------------------------------
VITE_API_URL=/api
VITE_WS_URL=/ws

# Alternative for external API hosting:
# VITE_API_URL=https://api.yourdomain.com/api
# VITE_WS_URL=wss://api.yourdomain.com/ws

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000

# -----------------------------------------------------------------------------
# Optional: News Fetch Timeout
# -----------------------------------------------------------------------------
NEWS_FETCH_TIMEOUT_MS=10000
